<div class="row">
  <div class="col-md-6">
    <%= form_for(@image, url: {action: 'create'}, html: {class: 'form'}) do |f| %>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.text_field :folder, class: 'form-control', placeholder: 'Folder' %>
        </div>
        <br/>
        <%= f.submit "Submit", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

<%= render @images %>